{
    "name": "Elber-OS-Loader",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "dev": "electron . --dev",
      "dist": "electron-builder --linux --win --mac",
      "dist:win": "electron-builder --win --x64",
      "dist:win32": "electron-builder --win --ia32",
      "dist:win-portable": "electron-builder --win portable --x64",
      "dist:win-portable-32": "electron-builder --win portable --ia32",
      "dist:mac": "electron-builder --mac",
      "dist:linux": "electron-builder --linux",
      "dist:all": "electron-builder -wml --x64 --ia32",
      "build": "electron-builder --win --x64 --publish never"
    },
    "devDependencies": {
      "electron": "^28.0.0",
      "electron-builder": "^24.6.4"
    },
    "build": {
      "appId": "com.elber.os.loader",
      "productName": "ELBER OS Loader",
      "directories": {
        "output": "dist"
      },
      "files": [
        "**/*",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/*.iml",
        "!{.gitignore,.gitattributes}"
      ],
      "win": {
        "target": [
          {
            "target": "portable",
            "arch": ["x64", "ia32"]
          },
          {
            "target": "nsis",
            "arch": ["x64", "ia32"]
          }
        ],
        "icon": "build/icon.ico"
      },
      "mac": {
        "target": "dmg",
        "icon": "build/icon.icns"
      },
      "linux": {
        "target": "AppImage",
        "icon": "build/icon.png"
      },
      "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
      },
      "portable": {
        "artifactName": "ElberOS.exe"
      }
    },
    "description": "Elber OS Loading"
  }